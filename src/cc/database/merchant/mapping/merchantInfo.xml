<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cc.database.merchant.mapping.merchantgzh">
    <select id="getAllMerchantgzh" parameterType="long" resultMap="merchantInfoResult">
        SELECT * FROM Merchantgzh
    </select>
    <select id="getMerchantgzhById" parameterType="long" resultMap="merchantInfoResult">
      SELECT * FROM Merchantgzh WHERE id=#{id}
    </select>
    <select id="getMerchantgzhByAppId" parameterType="String" resultMap="merchantInfoResult">
        SELECT * FROM Merchantgzh WHERE appid=#{appid}
    </select>
    <resultMap type="cc.database.merchant.MerchantInfo" id="merchantInfoResult">
        <id property="id" column="id" jdbcType="BIGINT" />
        <result property="appid" column="appid" jdbcType="VARCHAR"/>
        <result property="appsecret" column="appsecret" jdbcType="VARCHAR"/>
        <result property="mchId" column="mchId" jdbcType="VARCHAR"/>
        <result property="apiKey" column="apiKey" jdbcType="VARCHAR"/>
    </resultMap>
</mapper>